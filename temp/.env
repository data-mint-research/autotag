# .env.example - Kopiere nach .env und passe an deine Bedürfnisse an
# ============================================================================

# Pfade und Ordner
# ----------------
# Eingabeverzeichnis (absolut oder relativ)
INPUT_FOLDER=C:/Bilder/Input
# Ausgabeverzeichnis (absolut oder relativ)
OUTPUT_FOLDER=C:/Bilder/Output
# Verzeichnis für Modelle
MODELS_DIR=./models
# Verzeichnis für temporäre Dateien
TEMP_DIR=./temp

# Tag-Einstellungen
# ----------------
# Wie Tags geschrieben werden: append (hinzufügen) oder overwrite (überschreiben)
TAG_MODE=append
# Minimale Konfidenz in Prozent für Tag-Erstellung
MIN_CONFIDENCE_PERCENT=80
# Minimale Gesichtsgröße in Pixeln
MIN_FACE_SIZE=40
# Minimale Personenhöhe in Pixeln für Zählung
MIN_PERSON_HEIGHT=40

# Hardware-Einstellungen
# ----------------
# GPU verwenden (true/false)
USE_GPU=true
# CUDA-Geräte-ID (normalerweise 0 für erste GPU)
CUDA_DEVICE_ID=0
# Anzahl der Worker für parallele Verarbeitung
NUM_WORKERS=4
# Batch-Größe für GPU-Verarbeitung
BATCH_SIZE=8

# Modell-Einstellungen
# ----------------
# Automatischer Download fehlender Modelle (true/false)
AUTO_DOWNLOAD_MODELS=true
# Erzwinge Aktualisierung vorhandener Modelle (true/false)
FORCE_MODEL_UPDATE=false
# Offline-Modus ohne Download-Versuche (true/false)
OFFLINE_MODE=false

# Rekursive Ordnerverarbeitung
# ----------------
# Unterordner bei Verzeichnisverarbeitung einbeziehen (true/false)
PROCESS_SUBDIRECTORIES=true
# Maximale Rekursionstiefe (0 = unbegrenzt)
MAX_RECURSION_DEPTH=0

# MinIO-Einstellungen
# ----------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_INPUT_BUCKET=images
MINIO_OUTPUT_BUCKET=tagged-images

# Online-Identitätserkennung
# ----------------
# Online-Identitätserkennung aktivieren (true/false)
ONLINE_IDENTITY_ENABLED=false
# Zu verwendender Dienst (open_face oder pimeyes)
ONLINE_IDENTITY_SERVICE=open_face
# API-Schlüssel für den ausgewählten Dienst
ONLINE_IDENTITY_API_KEY=

# Logging
# ----------------
# Logging-Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
# Maximale Logdatei-Größe in MB
MAX_LOG_SIZE_MB=10
# Anzahl der zu behaltenden Logdateien
LOG_BACKUP_COUNT=3